{
  "name": "discover-my-newsletters",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "@types/speakeasy": "^2.0.10",
    "bcryptjs": "^2.4.3",
    "csrf-csrf": "^3.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "rate-limit-redis": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.2.1",
    "speakeasy": "^2.0.0",
    "twilio": "^5.0.0",
    "typeorm": "^0.3.17",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd newsletter-frontend && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd newsletter-frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd newsletter-frontend && npm run test",
    "test:security": "ts-node scripts/security-test.ts",
    "security:monitor": "ts-node scripts/security-monitor.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "diagnose": "node scripts/cross-platform.js diagnose",
    "fix": "node scripts/cross-platform.js fix",
    "clean": "rimraf **/node_modules **/dist **/build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/chalk": "^0.4.31",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chalk": "^5.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
