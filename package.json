{
  "name": "newsletter-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start:frontend": "vite",
    "start:backend": "cd ../newsletter-backend && npm run dev",
    "dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "build": "tsc --noEmit && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install",
    "deploy:indexes": "npx firebase deploy --only firestore:indexes",
    "vercel-build": "tsc --noEmit && vite build",
    "seed:newsletters": "node --loader ts-node/esm scripts/seedNewsletters.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.9.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "firebase": "^11.1.0",
    "framer-motion": "^11.16.0",
    "immer": "^10.1.1",
    "plausible-tracker": "^0.3.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-ga4": "^2.1.0",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.5.1",
    "react-router-dom": "^7.1.1",
    "uuid": "^11.0.4",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "firebase-admin": "^13.0.2",
    "firebase-tools": "^13.29.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
