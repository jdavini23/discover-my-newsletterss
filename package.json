{
  "name": "newsletter-frontend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "homepage": "https://joedamcgrath.github.io/newsletter-frontend",
  "scripts": {
    "dev": "vite",
    "build": "npm run ladle:build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ladle": "ladle serve",
    "ladle:build": "ladle build --config ladle.config.cjs --output dist --debug",
    "ladle:preview": "npx serve dist/component-library",
    "test:visual": "jest visual-regression.test.ts",
    "test:visual-update": "jest visual-regression.test.ts -u",
    "vercel-build": "npm install && npm install fs-extra && npm run ladle:build && node build-script.js"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.62.9",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "axios": "^1.6.2",
    "firebase": "^11.1.0",
    "framer-motion": "^11.15.0",
    "fs-extra": "^11.2.0",
    "js-cookie": "^3.0.5",
    "react-error-boundary": "^5.0.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "styled-components": "^6.1.1",
    "zod": "^3.22.4",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@ladle/react": "^4.1.2",
    "@storybook/addon-storyshots": "^7.6.20",
    "@storybook/addon-storyshots-puppeteer": "^7.6.20",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest-axe": "^3.5.9",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-spellcheck": "^0.0.20",
    "gh-pages": "^6.1.0",
    "jest-axe": "^9.0.0",
    "jest-image-snapshot": "^6.4.0",
    "jsdom": "^25.0.1",
    "msw": "^2.7.0",
    "postcss": "^8.4.49",
    "puppeteer": "^23.11.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "vitest-mock-extended": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
