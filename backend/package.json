{
  "name": "newsletter-discovery-backend",
  "version": "1.0.0",
  "description": "Backend for Newsletter Discovery Platform",
  "main": "dist/index.js",
  "scripts": {
    "lint:autofix": "ts-node scripts/fix-linting.ts",
    "commit": "node scripts/commit.js",
    "start": "ts-node-dev src/server.ts",
    "build": "tsc",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/migrations/init -d ./src/config/database.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/config/database.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/config/database.ts",
    "migrate": "ts-node-dev src/utils/runMigrations.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.unit.config.js",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.integration.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:redis": "ts-node-dev src/utils/redisCacheTest.ts",
    "seed:interests": "cross-env NODE_ENV=development ts-node-dev src/utils/seedInterests.ts",
    "seed:newsletters": "ts-node-dev src/utils/seedNewsletters.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "test:validation": "jest src/__tests__/validation.test.ts",
    "test:coverage:validation": "jest src/__tests__/validation.test.ts --coverage",
    "test:integration:validation": "jest src/__tests__/integration/userValidation.test.ts",
    "test:integration:validation:coverage": "jest src/__tests__/integration/userValidation.test.ts --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/redis": "^4.0.10",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.5",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.15",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "joi": "^17.13.3",
    "pg": "^8.13.1",
    "prettier": "^3.4.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
