{
  "name": "newsletter-discovery-backend",
  "version": "1.0.0",
  "description": "Backend for Newsletter Discovery Platform",
  "main": "dist/index.js",
  "scripts": {
    "lint:autofix": "ts-node scripts/fix-linting.ts",
    "lint:advanced-fix": "ts-node scripts/advanced-lint-fix.ts",
    "lint:comprehensive-fix": "node scripts/comprehensive-lint-fix.js",
    "lint:fix-warnings": "node scripts/fix-warnings.js",
    "lint:fix-remaining": "node scripts/fix-remaining-warnings.js",
    "lint:fix-syntax": "node scripts/fix-syntax-errors.js",
    "lint:final-fixes": "node scripts/final-fixes.js",
    "lint:fix-syntax-final": "node scripts/fix-syntax-final.js",
    "lint:fix-final-warnings": "node scripts/fix-final-warnings.js",
    "lint:fix-imports": "node scripts/fix-imports.js",
    "lint:fix-types": "node scripts/fix-types.js",
    "lint:final-cleanup": "node scripts/final-cleanup.js",
    "lint:final-parsing": "node scripts/final-parsing.js",
    "commit": "node scripts/commit.js",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "build": "tsc",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/migrations/init -d ./src/config/database.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/config/database.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/config/database.ts",
    "migrate": "ts-node-dev src/utils/runMigrations.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.unit.config.js",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.integration.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:redis": "ts-node-dev src/utils/redisCacheTest.ts",
    "seed:interests": "cross-env NODE_ENV=development ts-node-dev src/utils/seedInterests.ts",
    "seed:newsletters": "ts-node-dev src/utils/seedNewsletters.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "test:validation": "jest src/__tests__/validation.test.ts",
    "test:coverage:validation": "jest src/__tests__/validation.test.ts --coverage",
    "test:integration:validation": "jest src/__tests__/integration/userValidation.test.ts",
    "test:integration:validation:coverage": "jest src/__tests__/integration/userValidation.test.ts --coverage",
    "test:unit:recommendation": "jest src/__tests__/recommendationController.unit.test.ts",
    "test:integration:redis": "jest src/__tests__/integration/redisCaching.integration.test.ts",
    "test:performance": "ts-node src/performance/recommendation-benchmark.ts",
    "load:test": "artillery run load-test.yml",
    "profile:recommendations": "clinic doctor -- node -r ts-node/register src/performance/recommendation-benchmark.ts",
    "test:security": "jest tests/security.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "rate-limit-redis": "^4.1.1",
    "speakeasy": "^2.0.0",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/artillery": "^1.7.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/express-rate-limit": "^6.0.2",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/speakeasy": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "artillery": "^1.7.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "clinic": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "pg": "^8.13.1",
    "prettier": "^3.4.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
