# Application Configuration
NODE_ENV=development
PORT=3000
APP_SECRET=your_app_secret_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/newsletter_db
DATABASE_TYPE=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1h

# CSRF Protection
CSRF_SECRET=your_csrf_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# IP Reputation
IP_REPUTATION_API_KEY=your_abuseipdb_api_key

# External Services
NEWSLETTER_API_KEY=your_newsletter_api_key

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_NEWSLETTER_RECOMMENDATIONS=true

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Security Audit Configurations
SECURITY_AUDIT_FREQUENCY=weekly
SECURITY_AUDIT_EMAIL=security@yourdomain.com
