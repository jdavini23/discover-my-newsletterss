{
  "name": "newsletter-frontend",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,cts,mts}\"",
    "prepare": "husky",
    "analyze:bundle": "vite-bundle-analyzer",
    "clean": "rimraf dist node_modules/.cache",
    "validate": "npm run lint && npm run test && npm run build",
    "precommit": "lint-staged",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@tanstack/react-query": "^5.62.9",
    "axios": "^1.6.8",
    "date-fns": "^3.6.0",
    "firebase": "^10.7.2",
    "js-cookie": "^3.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.1.2",
    "react-hook-form": "^7.51.3",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.28.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@tanstack/react-query-devtools": "^5.62.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.0.11",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.7.2",
    "vite": "^5.2.11",
    "vite-bundle-analyzer": "^0.8.1",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,cts,js,jsx,json,md}": [
      "prettier --write",
      "eslint --fix --max-warnings 100"
    ]
  }
}
