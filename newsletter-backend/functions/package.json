{
  "name": "newsletter-backend-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Newsletter Backend",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.1"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "@types/node": "^18.15.0",
    "firebase-functions-test": "^3.0.0"
  },
  "private": true
}
